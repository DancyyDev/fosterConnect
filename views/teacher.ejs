<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>
<body>
  
<h1>Hello <%= user.local.firstName %></h1>

<form>
  <label for="className">Class Name:</label><br>
  <input type="text" id="className" name="className"><br>

  <label for="Category">Category:</label><br>
  <input type="text" id="category" name="category"><br>

  <label for="className">Capacity:</label><br>
  <input type="number" id="capacity" name="className"><br>

  <label for="courseLength">Course Length:</label><br>
  <input type="number" id="courseLength" name="courseLength"><br>

  <label for="lname">Description:</label><br>
  <textarea type="text" id="description" name="description"></textarea><br><br>  

  <button id="submit" type="submit">Submit Class</button>

</form> 

<section class="container">
  <div>
    <h1>Welcome to the Dashboard</h1>
  </div>

  <h2>Courses!</h2>

  <ul class="courseList">
      <% for(let i=0; i<courses.length; i++) {
        let completedClass = ''
        if(courses[i].complete){
          completedClass = 'completed'
        }
        %>
        <li id="<%=courses[i]._id %>"class="orderUp <%= completedClass %>">  
          <span class="kidName"><%=courses[i].name %></span>
          <span><%= courses[i].className %></span> <!--button type where when they clickc on it it will get added to current coures-->
          <span><%= courses[i].capacity %></span>
          <span><%= courses[i].category %></span>
          <span><%= courses[i].courseLength %></span>
          <p><%= courses[i].description %></p>
          
          <a href= 'edit?id=<%=courses[i]._id %>'><button class="edit" data-courseID=<%=courses[i]._id %>data-teacherID=<%= courses[i].teacherID %>>Edit Course</button></a>
          <button class="delete" data-courseID=<%=courses[i]._id %>data-teacherID=<%= courses[i].teacherID %>>Delete Course</button>         <!--ADD/Drop adding propert called data course ID and storing the value of course ID--> 
       
        </li>
      <% } %>
      
  </ul>  

</section>


<div>

</div>

<script src="/teacher.js"></script>
</body>
</html>